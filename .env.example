# Supabase Configuration
# Copy this file to .env and fill in your actual values

VITE_SUPABASE_URL=your_supabase_project_url_here
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Make.com Webhooks for Email Notifications
# Get these URLs from your Make.com scenarios
VITE_MAKE_ORDER_WEBHOOK=your_make_order_confirmation_webhook_url_here
VITE_MAKE_ABANDONED_CART_WEBHOOK=your_make_abandoned_cart_webhook_url_here
VITE_MAKE_ABANDONED_BOOKING_WEBHOOK=your_make_abandoned_booking_webhook_url_here

# Wait time before triggering abandoned cart/booking webhook (in milliseconds)
# 1 minute = 60000ms, 5 minutes = 300000ms, 10 minutes = 600000ms
VITE_ABANDONED_WAIT_TIME=60000

# PayFast Payment Gateway
# Get these from your PayFast merchant dashboard
VITE_PAYFAST_MERCHANT_ID=your_payfast_merchant_id_here
VITE_PAYFAST_MERCHANT_KEY=your_payfast_merchant_key_here
VITE_PAYFAST_PASSPHRASE=your_payfast_passphrase_here_or_leave_empty
VITE_PAYFAST_MODE=sandbox
